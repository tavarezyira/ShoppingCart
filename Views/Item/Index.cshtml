@using System.Globalization
@model IEnumerable<Item>

<h2>Shopping Cart</h2>
<img src="~/images/Cart.jpg" alt="My Shopping Cart" style="max-width: 150px; height: auto;"/>

<table class="table">
    <thead>
        <tr>
            <th>Product Image</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                 <td>
                    @if (!string.IsNullOrEmpty(item.Product?.ProductImage))
                    {
                        <img src="@item.Product.ProductImage" alt="@item.Product.ProductName" style="max-width: 100px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C", new CultureInfo("en-US"))</td>
                <td>@((item.Quantity * item.Price).ToString("C", new CultureInfo("en-US")))</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h3>Total Price: @Model.Sum(i => i.Quantity * i.Price).ToString("C", new CultureInfo("en-US"))</h3>