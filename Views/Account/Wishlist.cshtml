@model IEnumerable<ShoppingCartApp.Models.WishlistItem>
@using System.Globalization

@{
    ViewData["Title"] = "My Wishlist";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">My Wishlist</h2>
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Your wishlist is empty.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@item.Product.ProductImage" class="card-img-top" alt="@item.Product.ProductName" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Product.ProductName</h5>
                            <p class="card-text">@item.Product.Description</p>
                            <p class="card-text text-success fw-bold">@item.Product.Price.ToString("C", new CultureInfo("en-US"))</p>
                        </div>
                        <div class="card-footer text-center">
                            <a asp-action="RemoveFromWishlist" asp-controller="Wishlist" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Remove</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
