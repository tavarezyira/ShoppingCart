@model ShoppingCartApp.Models.CustomerRegisterViewModel
@{
    ViewData["Title"] = "Customer Registration";
    string returnUrl = ViewData["ReturnUrl"] as string ?? "/";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-secondary text-white text-center">
                    <h2>Register</h2>
                </div>
                <div class="card-body">

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }

                    <form asp-action="CustomerRegister" method="post">
                        <input type="hidden" name="returnUrl" value="@returnUrl" />

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" autocomplete="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" autocomplete="off" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="off" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>

                    <!-- Google Sign-Up -->
                    <div class="text-center mt-3">
                        <a class="btn btn-danger w-100" asp-controller="Account" asp-action="GoogleLogin">
                            <i class="fab fa-google"></i> Sign Up with Google
                        </a>
                    </div>

                    <div class="text-center mt-3">
                        <a asp-controller="Account" asp-action="CustomerLogin">Already have an account? Login here</a>
                    </div>

                </div>
                <div class="card-footer text-center">
                    <small class="text-muted">Antique Store Customer Registration</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
