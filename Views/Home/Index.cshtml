@using System.Globalization
@model IEnumerable<ShoppingCartApp.Models.Product>

@{
    ViewData["Title"] = "Tienda de Chocolates";
}

<div class="container mt-4">
    <h1 class="text-center text-primary fw-bold">Antique Store</h1>
    <div class="row row-cols-1 row-cols-md-4 g-3">  <!-- Changed from 3 to 4 columns and reduced gap -->
        @foreach (var product in Model.Take(9))
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@product.ProductImage" class="card-img-top" alt="@product.ProductName" style="height: 180px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text fw-bold text-success">
                            @product.Price.ToString("C", new CultureInfo("en-US"))
                        </p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Create" asp-controller="Item" asp-route-productId="@product.Id" class="btn btn-primary btn-sm">
                            🛒 Add to Cart
                        </a>
                        <a asp-action="AddToWishlist" asp-controller="Wishlist" asp-route-productId="@product.Id" class="btn btn-outline-danger btn-sm">
                            ❤️
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
