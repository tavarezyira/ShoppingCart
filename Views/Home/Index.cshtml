@using System.Globalization
@model IEnumerable<ShoppingCartApp.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-3">Welcome To My Online Shop</h1>
    <img src="~/images/shoppingMain.jpg" alt="Main Shopping Image" style="max-width: 400px; height: auto;"/>

</div>
<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Product Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <img src="@product.ProductImage" alt="@product.ProductName" style="max-width: 100px; height: auto;" />
                </td>
                <td>@product.ProductName</td>
                <td>@product.Price.ToString("C", new CultureInfo("en-US"))</td>
                <td>
                    <a asp-action="Create" asp-controller="Item" asp-route-productId="@product.Id" class="btn btn-primary">Add to Cart</a>
                </td>                
            </tr>
        }
    </tbody>
</table>
