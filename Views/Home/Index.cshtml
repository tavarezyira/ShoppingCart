@using System.Globalization
@model IEnumerable<ShoppingCartApp.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mt-4">
    <h1 class="text-center text-primary fw-bold" style="font-size: 24px;">Welcome To My Online Shop</h1>
    
    <div class="text-center mb-3">
        <img src="~/images/shoppingMain.jpg" alt="Main Shopping Image" class="img-fluid rounded shadow" style="max-width: 350px;">
    </div>

    <!-- Contenedor con Scroll para la Tabla -->
    <div class="table-responsive" style="max-height: 70vh; overflow-y: auto;">
        <table class="table table-bordered shadow">
            <thead class="bg-primary text-white">
                <tr>
                    <th class="text-center">Image</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td class="text-center">
                            <img src="@product.ProductImage" alt="@product.ProductName" class="img-fluid rounded" style="max-width: 60px; height: auto;">
                        </td>
                        <td class="align-middle">@product.ProductName</td>
                        <td class="align-middle text-success fw-bold">@product.Price.ToString("C", new CultureInfo("en-US"))</td>
                        <td class="align-middle text-center">
                            <a asp-action="Create" asp-controller="Item" asp-route-productId="@product.Id" class="btn btn-primary btn-sm">
                                🛒 Add to Cart
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
