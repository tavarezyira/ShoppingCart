@model List<ShoppingCartApp.Models.WishlistItem>

@{
    ViewData["Title"] = "My Wishlist";
}

<div class="container mt-4">
    <h3 class="text-center">My Wishlist</h3>
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm border-0 mb-4">
                    <img src="@item.Product.ProductImage" class="card-img-top" alt="@item.Product.ProductName">
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Product.ProductName</h5>
                        <p class="text-success fw-bold">$@item.Product.Price</p>
                        
                        <div class="d-grid gap-2">
                            <a asp-controller="Item" asp-action="Create" asp-route-productId="@item.ProductId" class="btn btn-primary">
                                Add to Cart
                            </a>
                            
                            <a asp-controller="Wishlist" asp-action="RemoveFromWishlist" asp-route-id="@item.Id" class="btn btn-danger">
                                Remove
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
