@using System.Globalization
@model IEnumerable<ShoppingCartApp.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Manage Products</h2>
<img src="~/images/products.jpg" alt="My Shopping Cart" style="max-width: 150px; height: auto;"/>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Product Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <img src="@product.ProductImage" alt="@product.ProductName" style="max-width: 100px; height: auto;" />
                </td>
                <td>@product.ProductName</td>
                <td>@product.Price.ToString("C", new CultureInfo("en-US"))</td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
       
            </tr>
        }
    </tbody>
</table>
