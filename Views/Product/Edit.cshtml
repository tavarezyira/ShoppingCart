@model ShoppingCartApp.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <h2 class="text-center text-warning fw-bold">✏️ Edit Product</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <form asp-action="Edit" enctype="multipart/form-data" method="post">
                    <div class="text-center mb-3">
                        <img src="@ViewBag.viewImage" alt="Product Image" class="img-fluid rounded shadow-sm" style="max-width: 200px;">
                    </div>

                    <div class="form-group">
                        <label asp-for="ProductName" class="fw-bold"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="fw-bold"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ProductImage" class="fw-bold">Upload Image</label>
                        <input type="file" id="imageFile" name="imageFile" class="form-control-file" />
                        <span asp-validation-for="ProductImage" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center mt-3">
                        <button type="submit" class="btn btn-warning mx-2">✅ Update</button>
                        <a asp-action="Index" class="btn btn-secondary">↩ Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('imageFile').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    const imagePreview = document.getElementById('imagePreview');
                    imagePreview.src = e.target.result;
                    imagePreview.style.display = 'block';
                };
                
                reader.readAsDataURL(file);
            } else {
                document.getElementById('imagePreview').style.display = 'none';
            }
        });
    </script>
}

